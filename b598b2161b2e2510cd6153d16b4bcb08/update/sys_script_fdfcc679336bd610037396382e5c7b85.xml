        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var strCurrentUrl = x_snc_devtools.GetCurrentUrl();
	if (strCurrentUrl.indexOf('.do?') != -1)
	{
		var strDecoded = decodeURIComponent(strCurrentUrl);
		var nPos = strDecoded.indexOf('ride_scope=');
		if (nPos != -1)
		{
			strScopeSysId = strDecoded.substr(nPos+11,32);
			if (x_snc_devtools.IsValidSysId(strScopeSysId) == true)
			{
				current.sys_scope = strScopeSysId;
			}
		}
	}

